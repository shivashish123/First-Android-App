<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dish5">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="52dp"
        android:text="Tamarind Rice"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="23dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:onClick="backtoOption"
        android:text="Go Back For New Search" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="209dp"
        android:layout_height="124dp"
        android:layout_above="@+id/buttonplay5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:text="Ingredients : Chana Dal\nChilli Powder,Coriander\nPowder,Cumin Powder\nGreen Chilli,Oil\nRed Chilli,Rice\nTamarind juice,Turmeric"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="17dp" />

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonplay5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Play Video" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="173dp"
        android:layout_height="153dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="-13dp"
        android:src="@drawable/tamarindrice" />

</RelativeLayout>